{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/([^/]+).(js|css|ico|png|jpg|svg|webp)", "dest": "/public/$1.$2" },
    { "src": "/(.*)", "dest": "/public/index.html" }
  ]
}
